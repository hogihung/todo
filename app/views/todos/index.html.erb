<H1>My Todos</H1>

<ul>
  <% @todos.each do |todo| %>
    <li class='todo<%= ' completed' if todo.completed_at? %>'>
      <%= todo.description %>
      <%= link_to 'Complete', todo_completion_path(todo), method: :post %>
    </li>
  <% end %>
</ul>

<p>
<%= link_to 'Add a new todo', new_todo_path %>
</p>